{
    "name": "drupalassociation/php-signify",
    "description": "Signify-compliant signature verification",
    "keywords": ["signify", "cryptography", "security"],
    "license": "MIT",
    "authors": [
        {
            "name": "Drupal Association",
            "homepage": "https://www.drupal.org/association"
        }
    ],
    "require": {
        "paragonie/sodium_compat": "^1.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^4|^5|^6|^7|^8|^9",
        "ext-mbstring": "*",
        "symfony/phpunit-bridge": "^2|^3|^4|^5"
    },
    "autoload": {
        "psr-4": {
            "DrupalAssociation\\Signify\\": "src/"
        }
    },
    "autoload-dev": {
      "psr-4": { "DrupalAssociation\\Signify\\Tests\\": "tests/" }
    },
    "scripts": {
        "test": "phpunit --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
