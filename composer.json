{
    "name": "drupalassociation/php-signify",
    "description": "Signify-compliant signature verification",
    "keywords": ["signify", "cryptography", "security"],
    "license": "MIT",
    "authors": [
        {
            "name": "Drupal Association",
            "homepage": "https://www.drupal.org/association"
        }
    ],
    "require": {
        "php": "^7.2.3",
        "ext-sodium": "*",
        "paragonie/sodium_compat": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "DrupalAssociation\\Signify\\": "src/"
        }
    },
    "autoload-dev": {
    },
    "scripts": {
        "test": "phpunit --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
